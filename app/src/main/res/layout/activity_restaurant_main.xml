<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurantName"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textRestaurantName"
        android:layout_width="352dp"
        android:layout_height="69dp"
        android:layout_marginTop="64dp"
        android:text="restaurantName"
        android:textAlignment="center"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restaurantEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@+id/restaurantRewards"
        app:layout_constraintStart_toEndOf="@+id/restaurantChats"
        app:layout_constraintTop_toBottomOf="@+id/textRestaurantName" />

    <Button
        android:id="@+id/restaurantRewards"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="43dp"
        android:text="Rewards"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restaurantEdit"
        app:layout_constraintTop_toBottomOf="@+id/textRestaurantName" />

    <Button
        android:id="@+id/restaurantChats"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="Chats"
        app:layout_constraintEnd_toStartOf="@+id/restaurantEdit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRestaurantName" />

    <Button
        android:id="@+id/restaurantTables"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Tables"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantChats" />

    <Button
        android:id="@+id/restaurantAccounts"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Accounts"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/restaurantSignOut"
        app:layout_constraintStart_toEndOf="@+id/restaurantTables"
        app:layout_constraintTop_toBottomOf="@+id/restaurantEdit" />

    <Button
        android:id="@+id/restaurantSignOut"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:text="Sign out"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantRewards" />

</androidx.constraintlayout.widget.ConstraintLayout>