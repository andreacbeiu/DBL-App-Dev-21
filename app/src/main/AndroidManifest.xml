<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ui_screens">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UI_screens">

        <activity
            android:name=".SearchPageActivity"
            android:exported="false" />
        <activity
            android:name=".ViewRestaurantActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.RegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_registration" />
        <activity
            android:name=".RestaurantLoginActivity"
            android:exported="false" />
        <activity
            android:name=".CustomerLoginActivity"
            android:exported="false" />
        <activity
            android:name=".restaurant_list.RestaurantListActivity"
            android:exported="false" />
        <activity
            android:name=".restaurants.RestaurantMainActivity"
            android:exported="false" />
        <activity
            android:name=".restaurants.RestaurantEditActivity"
            android:exported="false" />
        <activity
            android:name=".restaurants.RestaurantRewardsActivity"
            android:exported="false" />
        <activity
            android:name=".restaurants.RestaurantTablesActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>